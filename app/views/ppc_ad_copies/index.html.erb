<div class="row">
  <div class="col-md-12">
    <h1>Ad Copy Options</h1>
  </div>
</div>

<% @experiment.ppc_ad_copies.each do |ppc_ad_copy| %>
<div class="row">
  <div class="col-md-12 well">
    <div class="row">
      <div class="col-md-3">
        <h4 class="text-center">Ad Copy</h4>
        <p><%= ppc_ad_copy.title %></p>
        <p><%= ppc_ad_copy.line_1 %></p>
        <p><%= ppc_ad_copy.line_2 %></p>
        <p><%= link_to ppc_ad_copy.display_url, ppc_ad_copy.landing_page_url %></p>
      </div>
      <div class="col-md-9">
        <div class="row text-center">
          <div class="col-md-3">
            <h4>Impressions</h4>
            <p><%= ppc_ad_copy.Impressions %></p>
          </div>
          <div class="col-md-3">
            <h4>Clicks</h4>
            <p><%= ppc_ad_copy.Clicks %></p>
          </div>
          <div class="col-md-3">
            <h4>Conversions</h4>
            <p><%= ppc_ad_copy.Conversions %></p>
          </div>
          <div class="col-md-3">
            <h4>Cost Per Click</h4>
            <p><%= number_to_currency(ppc_ad_copy.CPC) %></p>
          </div>
        </div>
        <div class="row text-center">
          <div class="col-md-3">
            <h4>Click %</h4>
            <p><%= number_to_percentage(number_with_precision(ppc_ad_copy.click_percentage), precision: 2) %></p>
          </div>
          <div class="col-md-3">
            <h4>Conversion %</h4>
            <p><%= number_to_percentage(number_with_precision(ppc_ad_copy.conversion_percentage), precision: 2) %></p>
          </div>
          <div class="col-md-3">
            <h4>Total Cost</h4>
            <p><%= number_to_currency(ppc_ad_copy.total_cost) %></p>
          </div>
          <div class="col-md-3">
            <h4>Cost Per Conversion</h4>
            <p><%= number_to_currency(ppc_ad_copy.cost_per_conversion) %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="text-center">
          <%= button_to 'Edit', edit_experiment_ppc_ad_copy_path(@experiment, ppc_ad_copy), :method => "get", class: "btn btn-primary" %>
          <%= button_to 'Destroy', [@experiment, ppc_ad_copy], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
<div class="row">
  <div class="well col-md-12">
    <div class="text-center"><%= button_to 'New Ad Copy', new_experiment_ppc_ad_copy_path(@experiment), :method => "get", class: "btn btn-success" %></div>
  </div>
</div>
