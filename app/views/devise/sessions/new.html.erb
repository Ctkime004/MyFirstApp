<div class="container">
	<div class="row">
		<div class="col-md-4">
			<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "well"}) do |f| %>
	  
				<fieldset>
					<legend>Sign In</legend>
					<%= f.input :email, wrapper_html: { class: 'form-group'}, input_html: { class: 'form-control' } %>
					<%= f.input :password, wrapper_html: { class: 'form-group'}, input_html: { class: 'form-control' } %>

		  			<% if devise_mapping.rememberable? -%>
		    			<%= f.input :remember_me, as: :boolean, wrapper_html: { class: 'form-group'} %>
		  			<% end -%>

		  			<%= f.button :submit, "Sign in", :class => 'btn btn-default' %>
		  		</fieldset>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
		<div class="col-md-8">
			<h2>Thanks for coming back!</h2>
		</div>
	</div>
</div>